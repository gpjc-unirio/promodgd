@model IEnumerable<Bpm2GP.Model.DataBase.Models.GddConfiguration>

@{
    ViewBag.Title = "Game Design Document Configuration";
}

<h3>Game Design Documents Configuration</h3>
<div class="col-md-12">
    <ol class="breadcrumb">
        <li class=""><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="active">Game Design Document</li>
    </ol>
</div>

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });

    function OpenElementTab() {
        $("#tblGdd").removeClass("col-md-12");
        $("#tblGdd").addClass("col-md-6");
        $("#btnReloadGdds").addClass("hide");
        $("#btnAddGdd").addClass("hide");
        $(".btnShowElement").addClass("hide");
        $(".btnDeleteGdd").addClass("hide");
        $("#tblGddElements").removeClass("hide");
        $("#tblGddElements").attr("style", "border-left: 1px solid silver");
    }
</script>


<div id="tblGdd" class="col-md-12">
    @Html.Partial("_TblGdds", Model)
</div>
<div id="tblGddElements" class="col-md-6 hide">

</div>
<div class="container">

</div>

