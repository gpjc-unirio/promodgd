@model Bpm2GP.Model.DataBase.Models.Project

<script type="text/javascript">
    
    function editInformation() {
        $("input").removeAttr("disabled");
        $("textarea").removeAttr("disabled");
        $("#btnSaveInfo").removeClass("hide");
        $("#btnCancel").removeClass("hide");
        $("#btnEdit").addClass("hide");
        $("#Title").focus();
        $("#GamGenre").attr("disabled", "disabled");
    }

</script>

<br/>
<div class="row">
    @using (Ajax.BeginForm("UpdateProject", "Project", new AjaxOptions()
    {
        UpdateTargetId = "tblInfos",
        HttpMethod = "post",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "divCarregando"
    }))
    {
        <div class="col-md-7" id="tblInfos">
            @Html.Partial("_ProjectInformationPanel", Model)
        </div>
    }

    <div class="col-md-5" id="projectDesigners">
        @Html.Partial("_ProjectDesigners", Model)
    </div>
</div>