@model Bpm2GP.Model.DataBase.Models.Designer

<script>
    $.validator.unobtrusive.parse(document);

    function postDone() {
        $("#dlgProfile").modal("hide");
        $('body').removeClass('modal-open');
        $('.modal-backdrop').remove();
    }
</script>

<div id="dlgProfile" class="modal fade" role="dialog">
    @using (Ajax.BeginForm("SaveProfile", "User", new AjaxOptions()
    {
        UpdateTargetId = "designerData",
        HttpMethod = "post",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "postDone"
    }))
    {


        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@Model.Name</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.User.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.User.Email, new Dictionary<string, object>() { { "class", "form-control" } })
                                @Html.ValidationMessageFor(model => model.User.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ShortBio, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.ShortBio, new Dictionary<string, object>() {{"class", "form-control"}, {"rows", 10}})
                                @Html.ValidationMessageFor(model => model.ShortBio, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer form-horizontal">
                    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="glyphicon glyphicon-remove-circle"></i> Cancel</button>
                    <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-floppy-save"></i> Save</button>
                </div>
            </div>
        </div>
    }
</div>
