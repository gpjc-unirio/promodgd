@{
    ViewBag.Title = "Projects";
}

<script type="text/javascript">
    $(document).on('shown.bs.tab', 'a[data-toggle="tab"]', function(e) {
        var target = $(e.target).attr("href"); // activated tab

        console.log(e.target);
        if ($(target).is(':empty')) {
            $.ajax({
                type: "GET",
                url: "/article/",
                error: function(data) {
                    alert("There was a problem");
                },
                success: function(data) {
                    $(target).html(data);
                }
            });
        }
    });
</script>

<ul id="myTab" class="nav nav-tabs">
    <li class="active"><a href="#home" data-toggle="tab">Project</a></li>
    <li class=""><a href="#process" data-toggle="tab">Process</a></li>
    <li class=""><a href="#game" data-toggle="tab">Game</a></li>
</ul>

<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="home">
        <p>The content of this table will be a game project definitions and its functionalities</p>
    </div>
    <div class="tab-pane fade" id="process">
        <p>The content of this table will be a process definitions and its functionalities</p>
    </div>
    <div class="tab-pane fade" id="game">
        <p>The content of this table will be a game definitions and its functionalities</p>
    </div>
</div>



